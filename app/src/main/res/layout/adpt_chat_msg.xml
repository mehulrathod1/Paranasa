    <LinearLayout
        android:id="@+id/linlaySender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:gravity="right|end"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorChat"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="false">

            <TextView
                android:id="@+id/txtSenderMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="sender"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtSenderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingEnd="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingStart="6dp"
            android:text="2 hours ago"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linlayReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="left|start"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/c_white"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="false">

            <TextView
                android:id="@+id/txtReceiverMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="receiver"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtReceiverDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingEnd="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingStart="6dp"
            android:text="2 hours ago"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>