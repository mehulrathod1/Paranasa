<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/planPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="0"
        android:textColor="@color/c_btn_blue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/pay_by"
        android:textAllCaps="true"
        android:textColor="@color/c_btn_blue1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtButtonPaypal"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@color/c_btn_blue"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="@string/paypal"
        android:textAllCaps="true"
        android:textColor="@color/c_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtButtonStripe"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/c_btn_blue"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="@string/stripe_payment"
        android:textAllCaps="true"
        android:textColor="@color/c_white"
        android:textSize="16sp" />
</LinearLayout>