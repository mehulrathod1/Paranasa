<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linlaySender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right|end"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorChat"
            app:cardCornerRadius="3dp"
            app:cardMaxElevation="3dp"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/imgSender"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:padding="4dp"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtSenderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingLeft="6dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:text="2 hours ago"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlayReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:gravity="left|start"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/c_white"
            app:cardCornerRadius="3dp"
            app:cardMaxElevation="3dp"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/imgReceiver"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:padding="4dp"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtReceiverDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingLeft="6dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:text="2 hours ago"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>