<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:rotationY="@integer/locale_mirror_flip"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/blue_back_button" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:rotationY="@integer/locale_mirror_flip"
            android:src="@drawable/paranasa_logo_icon_512x512px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_head"
        android:layout_alignStart="@+id/img_coupon"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/coupon"
        android:textAllCaps="true"
        android:textColor="@color/c_blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:rotationY="@integer/locale_mirror_flip"
        android:src="@drawable/coupon_unactive" />

    <TextView
        android:id="@+id/txt_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_coupon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto"
        android:text="@string/no_coupon"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rel_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_coupon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edt_bg"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_add_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/lbl_add_coupon"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addcoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_add_coupon"
            android:layout_marginTop="10dp"
            android:background="#f1eded"
            android:fontFamily="@font/roboto"
            android:hint="@string/enter_coupon"
            android:padding="5dp"
            android:textAlignment="viewStart" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnSaveCoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_coupon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="#4940FF"
        android:fontFamily="@font/roboto"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/lbl_add_coupon"
        android:textColor="#fff"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/adMobView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" />

</RelativeLayout>
